{
  "name": "HCS_Boilerplate",
  "version": "1.0.0",
  "description": "NPM + Webpack",
  "main": "app.js",
  "author": "Andy Rozal",
  "license": "MIT",
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*.css",
    "clean": "trash dist/{css/*,js/*,images/svg/*,images/*}",
    "scss": "node-sass --source-map true --source-map-embed true --importer node_modules/node-sass-magic-importer/dist/cli.js -o dist/css src/scss/index.scss",
    "imagemin": "imagemin src/images/* -e 'src/images/svg' -o dist/images",
    "svgs": "mkdir -p dist/images/svg && rm -rf dist/images/svg/ && svg-sprite -C config/config-svg-sprite.json src/images/svg/*.svg",
    "production:css": "npm run scss -- --output-style compressed && npm run autoprefixer",
    "production:js": "webpack --config config/config-webpack.production.js",
    "production:images": "npm run imagemin && npm run svgs",
    "production:fonts": "cpx 'src/fonts/**/*' dist/fonts -v",
    "production:all": "npm run clean && npm run production:css && npm run production:js && npm run production:images && npm run production:fonts",
    "watch:css": "onchange 'src/scss' -i -e '**/.DS_Store' -- npm run scss",
    "watch:js": "webpack -w --config config/config-webpack.js --display-reasons --display-modules",
    "watch:images": "cpx 'src/images/**/*.{jpg,png,gif,ico}' dist/images -wv",
    "watch:fonts": "cpx 'src/fonts/**/*' dist/fonts -wv",
    "watch:svgs": "onchange 'src/images/svg' -i -e '**/.DS_Store' -- npm run svgs",
    "watch:all": "npm-run-all -p express browsersync watch:css watch:js watch:images watch:svgs watch:fonts",
    "browsersync": "browser-sync start -c config/config-browsersync.js",
    "express": "nodemon ./bin/www",
    "start": "npm run watch:all"
  },
  "dependencies": {
    "body-parser": "~1.15.2",
    "cli": "^1.0.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "fs-extra": "^1.0.0",
    "http-auth": "^3.0.1",
    "jquery": "^3.1.1",
    "lodash": "^4.16.6",
    "lodash.padstart": "^4.6.1",
    "moment": "^2.15.1",
    "morgan": "~1.7.0",
    "nodemon": "^1.11.0",
    "normalize-scss": "^6.0.0",
    "replace-in-file": "^2.0.3",
    "serve-favicon": "~2.3.0",
    "signals": "^1.0.0",
    "twig": "^0.10.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.5",
    "cpx": "^1.5.0",
    "eslint": "^3.10.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.7.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.11.1",
    "node-sass-magic-importer": "^2.1.1",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.5.2",
    "svg-sprite": "https://github.com/Anderkins/svg-sprite/tarball/eb818ca460fd280862b0e7a1ebb170e7e1d7f8bf",
    "trash-cli": "^1.4.0",
    "webpack": "^1.13.3"
  },
  "config": {
    "color": "always"
  }
}
