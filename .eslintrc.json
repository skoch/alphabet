{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    "globals": {
        "pageJs": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./config/config-webpack.js"
            }
        }
    },
    "rules": {
        "dot-notation": 0,
        "eol-last": 0,
        "func-names": 0,
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "indent": ["error", 4],
        "max-len": 1,
        "new-cap": ["error", { "capIsNewExceptionPattern": "^(E|e)xpress\\.." }],
        "no-console": 0,
        "no-param-reassign": ["error", { "props": false }],
        "no-plusplus": 0,
        "no-undef": 1,
        "no-underscore-dangle": 0,
        "no-unused-vars": 0,
        "no-var": 0,
        "object-shorthand": 0,
        "padded-blocks": 1,
        "prefer-arrow-callback": 0,
        "quotes": 1,
        "radix": 1,
        "react/require-extension": 0,
        "space-before-function-paren": ["error", "never"],
        "space-in-parens": 0,
        "max-len": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "vars-on-top": 1
    }
}
